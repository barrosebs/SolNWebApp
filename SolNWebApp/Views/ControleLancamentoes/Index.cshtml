@model IEnumerable<SolNWebApp.Models.ControleLancamento>

@{
    ViewData["Title"] = "Controle Financeiros";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-dark"><i class="fas fa-hdd"></i> Novo Controle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Controle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Controle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"><i class="fas fa-user-edit"></i>Editar</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary"><i class="fas fa-exclamation-circle"></i>Detalhes</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fas fa-trash-alt"></i>Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
