@model SolNWebApp.Models.ControleLancamento

@{
    ViewData["Title"] = "Delete Registro";
}

<div class="alert alert-dismissible alert-danger">
    <h1>@ViewData["Title"]</h1>
    <h3>Você tem certeza que deseja excluir esse registro?</h3>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value=" Sim " class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary"><i class="fas fa-arrow-circle-left"></i> Voltar</a>
    </form>
</div>
<div>
    <h4>Controle de Lancamento</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Controle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Controle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>
    </dl>


</div>
