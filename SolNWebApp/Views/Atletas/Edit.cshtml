@model SolNWebApp.Models.Atleta
@using SolNWebApp.Models.Enum

@{
    ViewData["Title"] = "Editar dados dos Atleta";
}

<h1>@ViewData["Title"]</h1>

<h4>Detalhes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomeSocial" class="control-label"></label>
                <input asp-for="NomeSocial" class="form-control" />
                <span asp-validation-for="NomeSocial" class="text-danger"></span>
            </div>
            <div class="form-group">

                <label asp-for="Posicao" class="control-label"></label>
                <select asp-for="Posicao" class="form-control">
                    <option value="0">@Enum.GetName(typeof(Posicao), Posicao.Goleiro)</option>
                    <option value="1">@Enum.GetName(typeof(Posicao), Posicao.Jogador)</option>
                </select>
                <span asp-validation-for="Posicao" class="text-danger"></span>

            </div>
            <div class="form-group">
                <div class="custom-control custom-switch">
                    <input asp-for="MembroComissao" type="checkbox" class="custom-control-input" id="MembroComissao">
                    <label asp-for="MembroComissao" class="custom-control-label" for="MembroComissao"></label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="DataNascimento" class="control-label"></label>
                <input asp-for="DataNascimento" class="form-control" />
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataCadastro" class="control-label"></label>
                <input asp-for="DataCadastro" class="form-control" disabled />
            </div>
            <div class="form-group">
                <input type="submit" value="Gravar" class="btn btn-success" />
            </div>
            <div>
                <a asp-action="Index" class="btn btn-primary"><i class="fas fa-arrow-circle-left"></i> Voltar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
