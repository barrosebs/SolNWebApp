@model SolNWebApp.Models.ViewModels.AtletaFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>SituacaoDoAtleta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Situacao.Atleta.Nome" class="control-label"></label>
                <select asp-for="Situacao.Atleta.Nome" asp-items="@(new SelectList(Model.Atletas, "Id","Nome" ))" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Situacao.Situacao" class="control-label"></label>
                <select asp-for="Situacao.Situacao" class="form-control"></select>
                <span asp-validation-for="Situacao.Situacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Situacao.Status" class="control-label"></label>
                <select asp-for="Situacao.Status" class="form-control"></select>
                <span asp-validation-for="Situacao.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Situacao.Data" class="control-label"></label>
                <input asp-for="Situacao.Data" class="form-control" />
                <span asp-validation-for="Situacao.Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Situacao.Valor" class="control-label"></label>
                <input asp-for="Situacao.Valor" class="form-control" />
                <span asp-validation-for="Situacao.Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
