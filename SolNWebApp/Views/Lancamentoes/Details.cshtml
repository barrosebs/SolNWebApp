@model SolNWebApp.Models.Lancamento

@{
    ViewData["Title"] = "Detalhes do Lançamento";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Lançamento</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Atleta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Atleta.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ControleLancamento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ControleLancamento.Controle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vencimento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vencimento.Month)/@Html.DisplayFor(model => model.Vencimento.Year)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Detalhes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Detalhes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary"><i class="fas fa-user-edit"></i> Editar</a> |
    <a asp-action="Index" class="btn btn-primary"><i class="fas fa-arrow-circle-left"></i> Voltar</a>

</div>
