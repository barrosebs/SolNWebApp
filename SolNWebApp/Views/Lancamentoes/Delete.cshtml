@model SolNWebApp.Models.Lancamento

@{
    ViewData["Title"] = "Delete registro";
}


<div class="alert alert-dismissible alert-danger">
    <h1>@ViewData["Title"]</h1>
    <h3>Você tem certeza que deseja excluir esse registro?</h3>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value=" Sim " class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary"><i class="fas fa-arrow-circle-left"></i> Voltar</a>
    </form>
</div>
<div>
    <h4>Lancamento</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Atleta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Atleta.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ControleLancamento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ControleLancamento.Controle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vencimento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vencimento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Detalhes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Detalhes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>

    </dl>
    
    
</div>
